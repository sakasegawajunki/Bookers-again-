<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
      
  <% end %>
<% end %>
<div class="container container px-5 px-sm-0">
  <div class="row">
    <div class="col-3">
      <%=render "books/user info", user: @user %>
      <%=render "books/new book", book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>