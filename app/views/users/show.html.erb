<div class="container container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%=render "books/user info", user: @user %>
      <%=render "books/new book", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse ">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opnion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%=link_to user_path(book.user) do %>
            <%= attachment_image_tag(book.user, :image, :fill, 25, 25, fallback: "no_image.jpg") %>
            <% end %>
            </td>
            <td><%=link_to book.title, book_path(book) %></td>
            <td><%=book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>